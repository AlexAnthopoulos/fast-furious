<div id="form">
  <div id="form-inner">
<form action="/login" method="POST">
    <label for="input-email" id="form-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
 
    <label for="input-password" id="form-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />
 
    <button type="submit">Login</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
  </div>
</div>

