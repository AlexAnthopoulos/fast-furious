<h2>Update the record</h2>

<form action="/games/{{id}}/records/edit" method="POST">
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="{{name}}">

    <label for="time-input">Time: </label>
    <input type="number" name="time"  id="time-input" value="{{time}}">

    <label for="picture-input"> Picture: </label>
    <input type="text" name="picture" id="picture-input" value="{{picture}}">
    <label for="video-input"> Video: </label>
    <input type="text" name="video" id="video-input" value="{{video}}">
    <button type="submit">SAVE</button>
</form> 